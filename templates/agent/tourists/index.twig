{% extends 'agent/layout.twig' %}

{% block content %}
<h1 class="mb-3">Мои туристы</h1>

<div class="table-responsive">
  <table class="table table-striped align-middle">
    <thead>
      <tr>
        <th>ID</th>
        <th>ФИО</th>
        <th>Дата рождения</th>
        <th>Паспорт</th>
        <th>Телефон / Email</th>
        <th>Заявка</th>
        <th>Создан</th>
      </tr>
    </thead>
    <tbody>
      {% for t in tourists %}
      <tr>
        <td><a href="/agent/tourists/{{ t.id }}/edit">{{ t.id }}</a></td>
        <td><a href="/agent/tourists/{{ t.id }}/edit">{{ t.full_name|e }}</a></td>
        <td>{{ t.birth_date|e }}</td>
        <td>{{ t.passport|e }}</td>
        <td>{{ t.phone|e }}<br><small>{{ t.email|e }}</small></td>
        <td>{% if t.booking_id %}<a href="/agent/bookings/{{ t.booking_id }}">#{{ t.booking_id }}</a>{% else %}—{% endif %}</td>
        <td>{{ t.created_at|e }}</td>
      </tr>
      {% else %}
      <tr><td colspan="7" class="text-center text-muted">Нет туристов</td></tr>
      {% endfor %}
    </tbody>
  </table>
</div>
{% endblock %}

