<!doctype html>
<html lang="ru">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="csrf-token" content="{{ csrf }}">
  <title>{% block title %}Панель агента{% endblock %}</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/toastr@2.1.4/build/toastr.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/litepicker/dist/css/litepicker.css">
  <link rel="stylesheet" href="/assets/css/admin.css">
</head>
<body>
<div class="d-flex">
  <div class="sidebar bg-dark text-white p-3" style="min-width:240px; min-height:100vh;">
    <h4 class="mb-4">Агент</h4>
    <ul class="nav nav-pills flex-column mb-auto">
      <li class="nav-item"><a class="nav-link text-white" href="/agent">Туры</a></li>
      <li class="nav-item"><a class="nav-link text-white" href="/agent/bookings">Заявки</a></li>
      <li class="nav-item"><a class="nav-link text-white" href="/agent/profile">Профиль</a></li>
      <li class="nav-item"><a class="nav-link text-white" href="/agent/tourists">Туристы</a></li>
      <li class="nav-item mt-3"><a class="nav-link text-danger" href="/agent/logout">Выход</a></li>
    </ul>
  </div>
  <div class="content flex-fill p-4">
    {% include 'partials/breadcrumbs.twig' %}
    {% block content %}{% endblock %}
  </div>
</div>

<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/litepicker/dist/litepicker.js"></script>
<script src="https://cdn.jsdelivr.net/npm/toastr@2.1.4/build/toastr.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/inputmask@5.0.9/dist/jquery.inputmask.min.js"></script>
<script>$(function(){ var t=document.querySelector('meta[name="csrf-token"]'); if(t){ $.ajaxSetup({ headers: { 'X-CSRF-Token': t.getAttribute('content') } }); } });</script>
<script>
$(function(){
  // Input masks
  $('.js-mask-phone').inputmask({ mask: '+7 (999) 999-99-99', placeholder: '+7 (___) ___-__-__' });
  $('.js-mask-passport').inputmask({ mask: '9999 999999', placeholder: '____ ______' });
  $('.js-mask-price').inputmask({ 
    alias: 'numeric', 
    groupSeparator: ' ', 
    radixPoint: '.', 
    digits: 2, 
    autoGroup: true,
    rightAlign: false,
    placeholder: '0.00'
  });
  $('.js-mask-inn').inputmask({ mask: '9{10,12}', greedy: false, placeholder: '' });
  $('.js-mask-kpp').inputmask({ mask: '9{9}', placeholder: '' });
  $('.js-mask-okpo').inputmask({ mask: '9{8,10}', greedy: false, placeholder: '' });
  $('.js-mask-ogrn').inputmask({ mask: '9{13,15}', greedy: false, placeholder: '' });
  $('.js-mask-account').inputmask({ mask: '99999999999999999999', placeholder: '' });
});
</script>
<script src="/assets/js/agent.js"></script>
{% block scripts %}{% endblock %}
</body>
</html>

