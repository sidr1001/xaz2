<!doctype html>
<html lang="ru">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="csrf-token" content="{{ csrf }}">
    <title>{% block title %}Каталог туров{% endblock %}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
    <div class="container">
        <a class="navbar-brand" href="/">Туры</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item"><a class="nav-link" href="/admin">Админка</a></li>
            </ul>
        </div>
    </div>
    </nav>

<main class="container mb-5">
    {% include 'partials/breadcrumbs.twig' %}
    {% block content %}{% endblock %}
    </main>

<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script>$(function(){ var t=document.querySelector('meta[name="csrf-token"]'); if(t){ $.ajaxSetup({ headers: { 'X-CSRF-Token': t.getAttribute('content') } }); } });</script>
<script>
$(function(){
  // Input masks
  $('.js-mask-phone').inputmask({ mask: '+7 (999) 999-99-99', placeholder: '+7 (___) ___-__-__' });
  $('.js-mask-passport').inputmask({ mask: '9999 999999', placeholder: '____ ______' });
  $('.js-mask-price').inputmask({ 
    alias: 'numeric', 
    groupSeparator: ' ', 
    radixPoint: '.', 
    digits: 2, 
    autoGroup: true,
    rightAlign: false,
    placeholder: '0.00'
  });
  $('.js-mask-inn').inputmask({ mask: '9{10,12}', greedy: false, placeholder: '' });
  $('.js-mask-kpp').inputmask({ mask: '9{9}', placeholder: '' });
  $('.js-mask-okpo').inputmask({ mask: '9{8,10}', greedy: false, placeholder: '' });
  $('.js-mask-ogrn').inputmask({ mask: '9{13,15}', greedy: false, placeholder: '' });
  $('.js-mask-account').inputmask({ mask: '99999999999999999999', placeholder: '' });
});
</script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/nouislider@15.8.1/dist/nouislider.min.css">
<script src="https://cdn.jsdelivr.net/npm/nouislider@15.8.1/dist/nouislider.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/inputmask@5.0.9/dist/jquery.inputmask.min.js"></script>
<script src="/assets/js/frontend.bundle.js"></script>
{% block scripts %}{% endblock %}
</body>
</html>

