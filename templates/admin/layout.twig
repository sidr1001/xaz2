<!doctype html>
<html lang="ru">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="csrf-token" content="{{ csrf }}">
    <title>{% block title %}Админ-панель{% endblock %}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/toastr@2.1.4/build/toastr.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/litepicker/dist/css/litepicker.css">
    <link rel="stylesheet" href="/assets/css/admin.css">
</head>
<body>
<div class="d-flex">
    <div class="sidebar bg-dark text-white p-3" style="min-width:240px; min-height:100vh;">
        <h4 class="mb-4">CMS Туры</h4>
        <ul class="nav nav-pills flex-column mb-auto">
            <li class="nav-item"><a class="nav-link text-white" href="/admin">Панель</a></li>
            <li class="nav-item"><a class="nav-link text-white" href="/admin/tours">Туры</a></li>
            <li class="nav-item"><a class="nav-link text-white" href="/admin/agents">Агенты</a></li>
            <li class="nav-item"><a class="nav-link text-white" href="/admin/bookings">Заявки</a></li>
            <li class="nav-item"><a class="nav-link text-white" href="/admin/tourists">Туристы</a></li>
            <li class="nav-item"><a class="nav-link text-white" href="/admin/settings">Настройки</a></li>
            <li class="nav-item"><a class="nav-link text-white" href="/admin/reports">Отчеты</a></li>
            <li class="nav-item mt-3"><a class="nav-link text-white-50" href="/" target="_blank">Открыть сайт</a></li>
            <li class="nav-item mt-3"><a class="nav-link text-danger" href="/admin/logout">Выход</a></li>
        </ul>
    </div>
    <div class="content flex-fill p-4">
        {% include 'partials/breadcrumbs.twig' %}
        {% block content %}{% endblock %}
        {% if settings.sql_debug_enabled == '1' and query_log is defined and query_log %}
        <div class="card mt-4">
            <div class="card-header">SQL Debug</div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-sm">
                        <thead><tr><th>#</th><th>ms</th><th>SQL</th><th>Params</th></tr></thead>
                        <tbody>
                        {% for q in query_log %}
                        <tr>
                            <td>{{ loop.index }}</td>
                            <td>{{ '%.1f'|format(q.time_ms) }}</td>
                            <td><code>{{ q.sql }}</code></td>
                            <td><code>{{ q.params|json_encode(constant('JSON_UNESCAPED_UNICODE')) }}</code></td>
                        </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        {% endif %}
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/litepicker/dist/litepicker.js"></script>
<script src="https://cdn.jsdelivr.net/npm/toastr@2.1.4/build/toastr.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/inputmask@5.0.9/dist/jquery.inputmask.min.js"></script>
<script>$(function(){ var t=document.querySelector('meta[name="csrf-token"]'); if(t){ $.ajaxSetup({ headers: { 'X-CSRF-Token': t.getAttribute('content') } }); } });</script>
<script>
$(function(){
  // Input masks
  $('.js-mask-phone').inputmask({ mask: '+7 (999) 999-99-99', placeholder: '+7 (___) ___-__-__' });
  $('.js-mask-passport').inputmask({ mask: '9999 999999', placeholder: '____ ______' });
  $('.js-mask-price').inputmask({ 
    alias: 'numeric', 
    groupSeparator: ' ', 
    radixPoint: '.', 
    digits: 2, 
    autoGroup: true,
    rightAlign: false,
    placeholder: '0.00'
  });
  $('.js-mask-inn').inputmask({ mask: '9{10,12}', greedy: false, placeholder: '' });
  $('.js-mask-kpp').inputmask({ mask: '9{9}', placeholder: '' });
  $('.js-mask-okpo').inputmask({ mask: '9{8,10}', greedy: false, placeholder: '' });
  $('.js-mask-ogrn').inputmask({ mask: '9{13,15}', greedy: false, placeholder: '' });
  $('.js-mask-account').inputmask({ mask: '99999999999999999999', placeholder: '' });
});
</script>
<script src="/assets/js/admin.js"></script>
{% block scripts %}{% endblock %}
</body>
</html>

